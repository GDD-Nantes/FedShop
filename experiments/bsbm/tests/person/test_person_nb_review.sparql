PREFIX bsbm-inst: <http://www4.wiwiss.fu-berlin.de/bizer/bsbm/v01/instances/>
PREFIX bsbm: <http://www4.wiwiss.fu-berlin.de/bizer/bsbm/v01/vocabulary/>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX owl: <http://www.w3.org/2002/07/owl#>

SELECT ?personId (GROUP_CONCAT(?reviewId, "|") as ?groupReview) 
WHERE {
    ?localReview bsbm:reviewFor ?localProduct .
    BIND (REPLACE(STR(?localReview), ".*(person)(\\d+).*", "$1$2") as ?personId ) .
    BIND (REPLACE(STR(?localReview), ".*/(Review\\d+).*", "$1") as ?reviewId ) .
    ?localProduct owl:sameAs ?product .
}
GROUP BY ?personId